{
  "name": "camm-community-assistive-monitor",
  "version": "1.0.0",
  "description": "Community Assistive Monitor Model - A neighbourhood tool for emergency assistance",
  "main": "server/index.js",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
